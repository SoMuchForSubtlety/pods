<?xml version="1.0" encoding="UTF-8"?>
<interface>

  <template class="ContainerPage" parent="GtkWidget">
    <property name="layout-manager">
      <object class="GtkBinLayout"/>
    </property>

    <child>
      <object class="AdwLeaflet" id="leaflet">
        <property name="can-navigate-back">True</property>
        <property name="can-unfold">False</property>

        <child>
          <object class="GtkStack" id="stack">

            <child>
              <object class="GtkStackPage">
                <property name="name">container</property>

                <property name="child">
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>

                    <!-- Headerbar -->
                    <child>
                      <object class="AdwHeaderBar">
                        <property name="centering-policy">strict</property>

                        <child type="start">
                          <object class="GtkButton">
                            <property name="icon-name">go-previous-symbolic</property>
                            <property name="action-name">navigation.back</property>
                          </object>
                        </child>

                        <child type="start">
                          <object class="GtkButton" id="go_first_button">
                            <property name="icon-name">go-first-symbolic</property>
                            <property name="action-name">navigation.go-first</property>
                            <property name="visible" bind-source="go_first_button" bind-property="sensitive" bind-flags="sync-create"/>
                          </object>
                        </child>

                        <child type="title">
                          <object class="AdwViewSwitcherTitle" id="title">
                            <property name="stack">panel_stack</property>
                          </object>
                        </child>

                        <child type="end">
                          <object class="ContainerMenuButton" id="menu_button">
                            <binding name="container">
                              <lookup name="container">ContainerPage</lookup>
                            </binding>
                            <property name="valign">center</property>
                          </object>
                        </child>

                        <child type="end">
                          <object class="GtkSeparator">
                            <style>
                              <class name="spacer"/>
                            </style>
                          </object>
                        </child>

                        <child type="end">
                          <object class="GtkToggleButton" id="logs_show_timestamps_button">
                            <property name="icon-name">preferences-system-time-symbolic</property>
                            <property name="tooltip-text" translatable="yes">Toggle timestamps</property>
                          </object>
                        </child>

                        <child type="end">
                          <object class="GtkToggleButton" id="logs_search_button">
                            <property name="icon-name">system-search-symbolic</property>
                          </object>
                        </child>

                      </object>
                    </child>

                    <!-- Panel Stack -->
                    <child>
                      <object class="AdwViewStack" id="panel_stack">
                        <property name="vexpand">True</property>

                        <!-- Details Panel -->
                        <child>
                          <object class="AdwViewStackPage">
                            <property name="icon-name">image-x-generic-symbolic</property>
                            <property name="name">details</property>
                            <property name="title" translatable="yes">Details</property>

                            <property name="child">
                              <object class="ContainerDetailsPanel">
                                <binding name="container">
                                  <lookup name="container">ContainerPage</lookup>
                                </binding>
                              </object>
                            </property>

                          </object>
                        </child>

                        <!-- Logs Panel -->
                        <child>
                          <object class="AdwViewStackPage">
                            <property name="icon-name">utilities-terminal-symbolic</property>
                            <property name="name">logs</property>
                            <property name="title" translatable="yes">Logs</property>

                            <property name="child">
                              <object class="ContainerLogsPanel" id="logs_panel">
                                <binding name="container">
                                  <lookup name="container">ContainerPage</lookup>
                                </binding>
                              </object>
                            </property>

                          </object>
                        </child>

                      </object>
                    </child>

                    <!-- View Switcher Bar -->
                    <child>
                      <object class="AdwViewSwitcherBar">
                        <property name="stack">panel_stack</property>
                        <binding name="reveal">
                          <lookup name="title-visible">title</lookup>
                        </binding>
                      </object>
                    </child>

                  </object>
                </property>

              </object>
            </child>

            <child>
              <object class="GtkStackPage">
                <property name="name">deleted</property>

                <property name="child">

                  <object class="GtkBox">
                    <property name="orientation">vertical</property>

                    <!-- Headerbar -->
                    <child>
                      <object class="AdwHeaderBar">
                        <property name="centering-policy">strict</property>

                        <child type="start">
                          <object class="GtkButton">
                            <property name="icon-name">go-previous-symbolic</property>
                            <property name="action-name">navigation.back</property>
                          </object>
                        </child>

                        <child type="start">
                          <object class="GtkButton">
                            <property name="icon-name">go-first-symbolic</property>
                            <property name="action-name">navigation.go-first</property>
                            <property name="visible" bind-source="go_first_button" bind-property="sensitive" bind-flags="sync-create"/>
                          </object>
                        </child>

                        <child type="title">
                          <object class="AdwWindowTitle">
                            <property name="title" translatable="yes">Container Page</property>
                          </object>
                        </child>

                      </object>
                    </child>

                    <!-- Status Page -->
                    <child>
                      <object class="AdwStatusPage">
                        <property name="icon-name">user-trash-symbolic</property>
                        <property name="title" translatable="yes">Container Has Been Deleted</property>
                        <property name="vexpand">True</property>
                      </object>
                    </child>

                  </object>
                </property>

              </object>
            </child>

          </object>
        </child>

        <child>
          <object class="AdwLeafletPage">
            <property name="name">overlay</property>

            <property name="child">
              <object class="LeafletOverlay" id="leaflet_overlay"/>
            </property>

          </object>
        </child>

      </object>
    </child>

  </template>
</interface>
