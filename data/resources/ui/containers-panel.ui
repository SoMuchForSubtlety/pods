<?xml version="1.0" encoding="UTF-8"?>
<interface>

  <template class="ContainersPanel" parent="GtkWidget">
    <property name="layout-manager">
      <object class="GtkBoxLayout">
        <property name="orientation">vertical</property>
      </object>
    </property>

    <!-- Initial Status Page -->
    <child>
      <object class="AdwStatusPage" id="status_page">
        <property name="description" translatable="yes">Please wait a moment</property>
        <property name="title" translatable="yes">Containers Are Being Retieved</property>
        <property name="vexpand">True</property>

        <child>
          <object class="GtkSpinner">
            <property name="halign">center</property>
            <property name="height-request">30</property>
            <property name="spinning">True</property>
            <property name="width-request">30</property>
          </object>
        </child>

      </object>
    </child>

    <!-- Main view -->
    <child>
      <object class="GtkOverlay" id="overlay">

        <!-- Progress bar overlay -->
        <child type="overlay">
          <object class="GtkStack" id="progress_stack">
            <property name="transition-type">crossfade</property>
            <property name="valign">start</property>

            <child>
              <object class="GtkStackPage">
                <property name="name">empty</property>
                <property name="child">
                  <object class="AdwBin"/>
                </property>
              </object>
            </child>

            <child>
              <object class="GtkStackPage">
                <property name="name">bar</property>
                <property name="child">
                  <object class="GtkProgressBar" id="progress_bar">
                    <style>
                      <class name="osd"/>
                    </style>
                  </object>
                </property>
              </object>
            </child>

          </object>
        </child>

        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>

            <child>
              <object class="GtkSearchBar" id="search_bar">

                <property name="child">
                  <object class="GtkSearchEntry" id="search_entry">
                    <property name="hexpand">True</property>
                  </object>
                </property>

              </object>
            </child>

            <!-- List of containers -->
            <child>
              <object class="AdwPreferencesPage">
                <property name="valign">start</property>

                <child>
                  <object class="AdwPreferencesGroup" id="container_group">
                    <property name="title" translatable="yes">Summary</property>

                    <child>
                      <object class="GtkListBox" id="list_box">
                        <style>
                          <class name="boxed-list"/>
                        </style>
                        <property name="selection-mode">none</property>
                      </object>
                    </child>

                  </object>
                </child>

              </object>
            </child>

          </object>
        </child>

      </object>
    </child>

  </template>
</interface>
