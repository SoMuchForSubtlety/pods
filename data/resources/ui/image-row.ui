<?xml version="1.0" encoding="UTF-8"?>
<interface>

  <template class="ImageRow" parent="AdwActionRow">
    <property name="activatable">True</property>
    <property name="action-name">image.show-details</property>

    <child>
      <object class="ContainersCountBar">
        <binding name="container-list">
          <lookup name="container-list" type="Image">
            <lookup name="image">ImageRow</lookup>
          </lookup>
        </binding>
      </object>
    </child>

    <child>
      <object class="ImageMenuButton">
        <style>
          <class name="flat"/>
        </style>
        <binding name="image">
          <lookup name="image">ImageRow</lookup>
        </binding>
        <property name="valign">center</property>
      </object>
    </child>

    <child>
      <object class="GtkImage">
        <property name="icon_name">go-next-symbolic</property>
      </object>
    </child>

  </template>
</interface>
