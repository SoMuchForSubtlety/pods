<?xml version="1.0" encoding="UTF-8"?>
<interface>

  <template class="ContainerRow" parent="AdwActionRow">
    <property name="activatable">True</property>
    <property name="action-name">container.show-details</property>

    <child>
      <object class="GtkBox" id="stats_box">

        <child>
          <object class="CircularProgressBar" id="cpu_bar">
            <property name="width-request">42</property>
            <property name="label">cpu</property>
          </object>
        </child>

        <child>
          <object class="CircularProgressBar" id="mem_bar">
            <property name="width-request">42</property>
            <property name="label">mem</property>
          </object>
        </child>

      </object>
    </child>

    <child>
      <object class="GtkLabel" id="status_label">
        <style>
          <class name="container-status"/>
        </style>
        <property name="valign">center</property>
      </object>
    </child>

    <child>
      <object class="GtkStack" id="menu_stack">

        <child>
          <object class="GtkStackPage">
            <property name="name">ongoing</property>

            <property name="child">
              <object class="GtkSpinner">
                <property name="margin-bottom">6</property>
                <property name="margin-end">6</property>
                <property name="margin-start">6</property>
                <property name="margin-top">6</property>
                <property name="spinning">True</property>
              </object>
            </property>

          </object>
        </child>

        <child>
          <object class="GtkStackPage">
            <property name="name">menu</property>

            <property name="child">
              <object class="GtkMenuButton" id="menu_button">
                <style>
                  <class name="flat"/>
                </style>
                <property name="icon-name">view-more-symbolic</property>
                <property name="valign">center</property>
              </object>
            </property>

          </object>
        </child>

      </object>
    </child>

    <child>
      <object class="GtkImage">
        <property name="icon_name">go-next-symbolic</property>
        <style>
          <class name="dim-label"/>
        </style>
      </object>
    </child>

  </template>
</interface>
