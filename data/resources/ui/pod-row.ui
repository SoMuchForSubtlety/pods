<?xml version="1.0" encoding="UTF-8"?>
<interface>

  <template class="PodRow" parent="AdwActionRow">
    <property name="activatable">True</property>
    <property name="action-name">pod.show-details</property>

    <child>
      <object class="GtkLabel" id="status_label">
        <style>
          <class name="status-badge"/>
        </style>
        <property name="valign">center</property>
      </object>
    </child>

    <child>
      <object class="PodMenuButton" id="menu_button">
        <style>
          <class name="flat"/>
        </style>
        <binding name="pod">
          <lookup name="pod">PodRow</lookup>
        </binding>
        <property name="valign">center</property>
      </object>
    </child>

    <child>
      <object class="GtkImage">
        <property name="icon_name">go-next-symbolic</property>
      </object>
    </child>

  </template>
</interface>
